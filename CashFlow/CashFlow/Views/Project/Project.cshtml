@model CashFlow.Models.NewProject

@{
    ViewBag.Title = "Nouveau projet";
}

<h2>Informations du projet</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Titre)
    @Html.ValidationMessageFor(model => model.Titre)
    @Html.TextBoxFor(model => model.Titre)<br /><br />
        
    @Html.LabelFor(model => model.Image)
    <input type="file" accept=".jpg,.png,.gif,.jpeg,.bmp" id="fileLoader" name="files" title="Load File" /><br />
<br />
    @Html.LabelFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)<br />
    @Html.TextAreaFor(model => model.Description)<br /><br />
    
    
    @Html.LabelFor(model => model.Categorie)
    @Html.ValidationMessageFor(model => model.ListeCategories)
    @Html.DropDownListFor(model => model.Categorie, new SelectList(Model.ListeCategories, "ID", "Value", Model.ListeCategories.First().ID))<br /><br />
   
    

    @Html.LabelFor(model => model.Ville)
    @Html.ValidationMessageFor(model => model.Ville)
    @Html.DropDownListFor(model => model.Ville, new SelectList(Model.ListeVille, "ID", "Value", Model.ListeVille.First().ID))<br /><br />
    
    
    @Html.LabelFor(model => model.MontantString)
    @Html.ValidationMessageFor(model => model.MontantString)
    @Html.TextBoxFor(model => model.MontantString)<br /><br />
    
    
    @Html.LabelFor(model => model.DateString)
    @Html.ValidationMessageFor(model => model.DateString)
    @Html.TextBoxFor(model => model.DateString)<br /><br />
    <button type="submit">Lancer le projet</button>
    
}
